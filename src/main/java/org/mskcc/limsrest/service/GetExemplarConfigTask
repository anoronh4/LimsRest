package org.mskcc.limsrest.service;

import org.apache.commons.logging.Log;
import org.apache.commons.logging.LogFactory;
import org.mskcc.limsrest.ConnectionPoolLIMS;


public class getExemplarConfigTask {
    private static Log log = LogFactory.getLog(GetSampleQcTask.class);
    private ConnectionPoolLIMS conn;

    public getExemplarConfigTask(ConnectionLIMS conn) {
        this.conn = conn;
    }
    public List<ExemplarConfig> execute(conn) {
        VeloxConnection vConn = conn.getConnection();
        User user = vConn.getUser();
        DataRecordManager dataRecordManager = vConn.getDataRecordManager();
        List<ExemplarConfig> configInfo;
        try {
            log.info("Inside the execute!");
            configInfo = dataRecordManager.queryDataRecords("ExemplarConfig", user);
            log.info("Queried config info size is: " + configInfo.size());
            configInfo.get(0).setVisiumImagePath(configInfo.getStringVal("VisiumImagePath", user));
        }
        catch (Exception e) {
            e.printStackTrace();
            log.error(e.getMessage());
            return null;
        }
        return configInfo;
    }
}